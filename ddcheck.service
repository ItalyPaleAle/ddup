[Unit]
Description=ddup - Dynamic DNS Health Checker and Updater
After=network.target
Wants=network.target

[Service]
Type=simple
User=ddup
Group=ddup
WorkingDirectory=/opt/ddup
ExecStart=/opt/ddup/ddup
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/ddup

[Install]
WantedBy=multi-user.target
